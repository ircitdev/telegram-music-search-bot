# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here_from_botfather
BOT_USERNAME=UspMusicFinder_bot

# Paths
TEMP_DIR=./data/temp
CACHE_DIR=./data/cache
LOGS_DIR=./logs
DATABASE_PATH=./data/database.db

# File and Duration Limits
MAX_FILE_SIZE=52428800  # 50MB - Telegram API limit
MAX_DURATION=600  # 10 minutes
RATE_LIMIT_REQUESTS=5  # max requests per period
RATE_LIMIT_PERIOD=60  # seconds

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Feature Flags
ENABLE_CACHE=true
ENABLE_STATS=true
ENABLE_INLINE=true

# Optional APIs
LASTFM_API_KEY=
AUDD_API_KEY=

# Payment Providers
CRYPTOBOT_TOKEN=

# YooMoney (Quickpay) - Bank card payments
# Get wallet number from https://yoomoney.ru
YOOMONEY_WALLET=
YOOMONEY_SECRET=
YOOMONEY_NOTIFICATION_URL=

# Error Tracking (Sentry)
# Get your DSN from https://sentry.io
SENTRY_DSN=

# Channel Auto-Posting
# Channel username or ID (e.g., @TopMusicToday or -100xxxxxxxxxx)
CHANNEL_ID=@TopMusicToday
CHANNEL_POST_HOUR=12
